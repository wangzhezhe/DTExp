#!/bin/sh
#SBATCH -N 1
#SBATCH -p main
#SBATCH -t 00:05:00

# init
source /home/zw241/cworkspace/src/DTExp/scripts/basic/init.sh

# start original gray-scott
mpirun -n 1 ./gray-scott settings.json &> gray-scott.log &

while [ ! -d ./gs.bp ]
do
    sleep 0.01
    echo "gs.bp dir not exist"
done

# start multiple tasks processing data
#2 4 8 16 32 64
TASKNUM=64
x=1
while [ $x -le $TASKNUM ]
do
  ./pdfwithana gs.bp 0.5
  x=$(( $x + 1 ))
  echo $x
done

wait
